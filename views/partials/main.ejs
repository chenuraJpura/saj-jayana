<%- include('createCountModel'); -%>
<script>
//passing count value to model
function passValueToModel(){
  const counterTag=document.querySelector('.main-button');
  const modelTag=document.getElementById('countText');
  modelTag.value=counterTag.innerHTML;
}
</script>
<div class="middle">
  <div class="circle ">
      <div class="main-button">
          0
      </div>
      <div class="row d-cell text-align-center">
      <button type="button"
        data-toggle="modal" 
        style="margin-top: 5vh;display: none;" 
        data-target="#resetBtn"
        id="b1"
        class="btn btn-primary btn-md btn-block btn-dark">RESET</button>
      <button 
        onclick="passValueToModel();"
        class="btn btn-dark mt-1 btn-block"
        data-toggle="modal" 
        data-target="#countSaveBtn" 
        style="display: none;" 
        id="b2">SAVE</button>
    </div>    
    </div>

  <!--Model-->
</div>
              
<!--delete task model-->
<div class="modal fade" id="resetBtn" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header px-4 py-3">
        <p class="modal-title" id="exampleModalLabel">Are you want to Clear?</p>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body px-4">
            <button type="button" class="btn btn-sm btn-secondary float-right" data-dismiss="modal">No</button>
            <button type="submit" class="btn btn-sm btn-dark reset float-right mr-1" data-dismiss="modal">Clear</button>

      </div>
    </div>
  </div>
</div>